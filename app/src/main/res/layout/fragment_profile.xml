<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/White">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="40dp">

        <ImageView
            android:layout_width="117dp"
            android:layout_height="111dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="NAME"
            android:textColor="@color/Black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myacc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_build_black_24dp"
            android:drawablePadding="8dp"
            android:paddingTop="20dp"
            android:text="MY ACCOUNT"
            android:textColor="@color/Black"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_restaurant_menu_black_24dp"
            android:drawablePadding="8dp"
            android:paddingTop="20dp"
            android:text="ORDERS"
            android:textColor="@color/Black"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
            android:drawablePadding="8dp"
            android:paddingTop="20dp"
            android:text="PAYMENTS"
            android:textColor="@color/Black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_help_black_24dp"
            android:drawablePadding="8dp"
            android:paddingTop="20dp"
            android:text="HELP"
            android:textColor="@color/Black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_radio_button_checked_black_24dp"
            android:drawablePadding="8dp"
            android:paddingTop="20dp"
            android:text="LOGOUT"
            android:textColor="@color/Black"
            android:textSize="25dp" />


    </LinearLayout>
</FrameLayout>